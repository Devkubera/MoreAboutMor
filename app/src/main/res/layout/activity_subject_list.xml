<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_picture"
    tools:context=".Activities.subjectListActivity">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/CV_BackSubjectList"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="-10dp"
        android:layout_centerHorizontal="true">

        <!-- BTN BACK -->
        <ImageView
            android:id="@+id/Btn_BackSubjectList"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="34dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/back_circle_button" />

        <RelativeLayout
            android:id="@+id/LayoutFont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/Btn_BackSubjectList">

            <TextView
                android:id="@+id/imgManagePost"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginStart="25dp"
                android:textColor="@color/white"
                android:fontFamily="@font/mitr_regular"
                android:textSize="24dp"
                android:text="Subject List"/>

        </RelativeLayout>

    </RelativeLayout>

    <!-- first box -->
    <RelativeLayout
        android:id="@+id/box_subject_1"
        android:layout_below="@+id/CV_BackSubjectList"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/background_subject_group1"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/custom_rectangle_subject">

            <RelativeLayout
                android:visibility="visible"
                android:id="@+id/subject_background_default1"
                android:layout_width="match_parent"
                android:layout_height="260dp">

            <TextView
                android:id="@+id/subject_background_txt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:alpha="0.7"
                android:fontFamily="@font/mitr_light"
                android:text="เพิ่มรายวิชาที่เกี่ยวข้องเพื่อรับ more point"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/subject_background_img1"
                android:layout_below="@+id/subject_background_txt1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:alpha="0.5"
                android:src="@drawable/ic_round_add_circle_outline_24" />

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/subject_txt_list1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/subject_list_inbox_1"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mitr_light"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:text="1st 1101040 ชุดวิชาแอนดรอย"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:layout_below="@+id/subject_list_inbox_1"
                    android:id="@+id/subject_list_inbox_2"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mitr_light"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="1st 1101040 ชุดวิชาแอนดรอย"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:layout_below="@+id/subject_list_inbox_2"
                    android:id="@+id/subject_list_inbox_3"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mitr_light"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="1st 1101040 ชุดวิชาแอนดรอย"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:layout_below="@+id/subject_list_inbox_3"
                    android:id="@+id/subject_list_inbox_4"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mitr_light"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="1st 1101040 ชุดวิชาแอนดรอย"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:layout_below="@+id/subject_list_inbox_4"
                    android:id="@+id/subject_list_inbox_5"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mitr_light"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="1st 1101040 ชุดวิชาแอนดรอย"
                    android:textColor="@color/white"
                    android:textSize="16dp" />




            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/header_subject_group1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

        <View
            android:id="@+id/subject_header_rectangle1"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_button_white" />

        <TextView
            android:visibility="visible"
            android:id="@+id/subject_txt1"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/mitr_medium"
            android:textSize="16dp"
            android:textColor="@color/nav_color"
            android:text="วิชาที่พัฒนาทักษะในสาขาวิชาของคุณ" />

            <TextView
                android:visibility="gone"
                android:drawableRight="@drawable/ic_round_editer_color_24"
                android:drawableTint="@color/nav_color"
                android:id="@+id/subject_edit_btn"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/mitr_medium"
                android:textSize="16dp"
                android:textColor="@color/nav_color"
                android:text="วิชาที่พัฒนาทักษะในสาขาวิชาของคุณ" />

        </RelativeLayout>



    </RelativeLayout>

    <!-- second box -->
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:id="@+id/box_subject_2"
        android:layout_below="@+id/box_subject_1"
        android:layout_centerHorizontal="true"
        android:layout_width="350dp"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/background_subject_group2"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/custom_rectangle_subject">

            <RelativeLayout
                android:visibility="visible"
                android:id="@+id/subject_background_default2"
                android:layout_width="match_parent"
                android:layout_height="260dp">

                <TextView
                    android:id="@+id/subject_background_txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="100dp"
                    android:alpha="0.7"
                    android:fontFamily="@font/mitr_light"
                    android:text="เพิ่มรายวิชาที่เกี่ยวข้องเพื่อรับ more point"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/subject_background_img2"
                    android:layout_below="@+id/subject_background_txt2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:alpha="0.5"
                    android:src="@drawable/ic_round_add_circle_outline_24" />

            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/subject_txt_list2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/subject_list_inbox_1_2"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mitr_light"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:text="1st 1101040 ชุดวิชาแอนดรอย"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:layout_below="@+id/subject_list_inbox_1_2"
                    android:id="@+id/subject_list_inbox_2_2"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mitr_light"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="1st 1101040 ชุดวิชาแอนดรอย"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:layout_below="@+id/subject_list_inbox_2_2"
                    android:id="@+id/subject_list_inbox_3_2"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mitr_light"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="1st 1101040 ชุดวิชาแอนดรอย"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:layout_below="@+id/subject_list_inbox_3_2"
                    android:id="@+id/subject_list_inbox_4_2"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mitr_light"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="1st 1101040 ชุดวิชาแอนดรอย"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <TextView
                    android:layout_below="@+id/subject_list_inbox_4_2"
                    android:id="@+id/subject_list_inbox_5_2"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mitr_light"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="1st 1101040 ชุดวิชาแอนดรอย"
                    android:textColor="@color/white"
                    android:textSize="16dp" />




            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/header_subject_group2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <View
                android:id="@+id/subject_header_rectangle2"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@drawable/custom_button_white" />

            <TextView
                android:visibility="visible"
                android:id="@+id/subject_txt2"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/mitr_medium"
                android:textSize="16dp"
                android:textColor="@color/nav_color"
                android:text="วิชาเสรีสำหรับสายชิลล์" />

            <TextView
                android:visibility="gone"
                android:drawableRight="@drawable/ic_round_editer_color_24"
                android:drawableTint="@color/nav_color"
                android:id="@+id/subject_edit_btn2"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/mitr_medium"
                android:textSize="16dp"
                android:textColor="@color/nav_color"
                android:text="วิชาที่พัฒนาทักษะในสาขาวิชาของคุณ" />

        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>