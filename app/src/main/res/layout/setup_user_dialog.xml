<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

   <com.google.android.material.card.MaterialCardView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       app:cardBackgroundColor="@color/white">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:id="@+id/text_InfoSetup01"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:layout_centerHorizontal="true"
               android:text="ยินดีต้อนรับ !"
               android:textSize="20dp"
               android:textStyle="bold"
               android:textColor="@color/dark"
               android:fontFamily="@font/mitr_regular"/>

           <ImageView
               android:id="@+id/pic_setup_hi"
               android:layout_width="200dp"
               android:layout_height="200dp"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/text_InfoSetup01"
               android:layout_marginTop="10dp"
               android:src="@drawable/img_setup_hi"/>

           <TextView
               android:id="@+id/text_InfoSetup02"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/pic_setup_hi"
               android:text="มาเริ่มใช้งานแอปพลิเคชันด้วยการอ่านกติกา"
               android:textSize="16dp"
               android:textColor="@color/dark"
               android:fontFamily="@font/mitr_light"/>

           <TextView
               android:id="@+id/text_InfoSetup03"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/text_InfoSetup02"
               android:text="การใช้งานแอปพลิเคชันกันเลย :)"
               android:textSize="16dp"
               android:textColor="@color/dark"
               android:fontFamily="@font/mitr_light"/>

           <android.widget.Button
               android:id="@+id/okButton"
               android:layout_width="220dp"
               android:layout_height="wrap_content"
               android:layout_marginTop="15dp"
               android:layout_marginBottom="15dp"
               android:layout_centerHorizontal="true"
               android:layout_below="@+id/text_InfoSetup03"
               android:text="ตกลง"
               android:textSize="20dp"
               android:textColor="@color/white"
               android:background="@drawable/custom_button_blue"
               android:fontFamily="@font/mitr_semibold" />

       </RelativeLayout>



   </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout >