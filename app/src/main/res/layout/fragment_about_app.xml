<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/aboutappFragment"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutAppFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/app_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_picture">

        <RelativeLayout
            android:id="@+id/CV_BackAboutApp"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="-10dp"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/Btn_BackAboutApp"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="34dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="28dp"
                android:src="@drawable/back_circle_button" />

            <RelativeLayout
                android:id="@+id/LayoutFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/Btn_BackAboutApp">


                <TextView
                    android:id="@+id/some_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mitr_regular"
                    android:text="เกี่ยวกับแอพ"
                    android:textColor="@color/white"
                    android:textSize="24dp" />


            </RelativeLayout>


        </RelativeLayout>




    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/CV_From"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="90dp"
        android:layout_below="@+id/profile"
        app:cardBackgroundColor="@color/white"
        style="@style/CustomCardViewStyle_Field_About"
        >


    <RelativeLayout
        android:id="@+id/LayoutInput"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- info icon -->
        <View
            android:id="@+id/aboutapp_infologo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_info"
            />
        <!-- Devs img -->
        <View
            android:layout_width="286dp"
            android:layout_height="153dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="110dp"
            android:background="@drawable/img_appinfo_devs"
            ></View>

        <!-- Text Area -->
        <View
            android:layout_width="286dp"
            android:layout_height="250dp"
            android:layout_marginTop="270dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/img_appinfo_contentbox"
            >
        </View>

        <ScrollView
            android:layout_width="250dp"
            android:layout_height="210dp"
            android:layout_marginTop="290dp"
            android:layout_centerHorizontal="true"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="@string/app_info"
                android:textSize="10dp"
                android:fontFamily="@font/mitr_light"
                android:lineSpacingMultiplier="1.1"
                ></TextView>
        </ScrollView>


        

    </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>




</FrameLayout>