<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/twentyoneFragment"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AboutAppFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/app_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_picture"
        >
        <!-- logo -->
        <ImageView
            android:id="@+id/aboutapp_logo"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="32dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_logo"
            />

        <!-- เกี่ยวกับแอพ -->
        <TextView
            android:id="@+id/some_id"
            android:layout_width="300dp"
            android:layout_height="53dp"
            android:layout_alignLeft="@id/aboutapp_logo"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/mitr_regular"
            android:gravity="center"
            android:text="วิชาศึกษาทั่วไปที่ส่งเสริมทักษะในศตวรรษที่ 21"
            android:textColor="@color/white"
            android:textSize="16dp" />

    </RelativeLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/CV_From"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="90dp"
        android:layout_below="@+id/profile"
        app:cardBackgroundColor="@color/white"
        style="@style/CustomCardViewStyle_Field_About"
        >

        <RelativeLayout
            android:id="@+id/LayoutInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="320dp"
                android:layout_height="500dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/black"
                    android:text="@string/twentyone"
                    android:textSize="12dp"
                    android:fontFamily="@font/mitr_light"
                    android:lineSpacingMultiplier="1.1"
                    />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/img_firsttwentyone"
                        android:layout_marginTop="95dp"
                        />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/img_secondtwentyone"
                        android:layout_marginTop="340dp"
                        />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/img_thirdtwentyone"
                        android:layout_marginTop="460dp"
                        />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/img_forthtwentyone"
                        android:layout_marginTop="590dp"
                        />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/img_fifthtwentyone"
                        android:layout_marginTop="710dp"
                        />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/img_sixthtwentyone"
                        android:layout_marginTop="850dp"
                        />

                    <ImageView
                        android:layout_width="180dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/img_seventhtwentyone"
                        android:layout_marginTop="1050dp"
                        />

                </RelativeLayout>
            </ScrollView>




        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>




</FrameLayout>