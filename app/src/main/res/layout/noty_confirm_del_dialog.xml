<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:text="ลบแจ้งเตือน"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/dark"
                android:fontFamily="@font/mitr_regular"/>

            <!-- Line Top-->
            <View
                android:id="@+id/lineTop"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/text_delete"
                android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/text_InfoDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/lineTop"
                android:text="คุณจะลบแจ้งเตือนนี้ใช่ไหม ?"
                android:textSize="14dp"
                android:textColor="@color/dark"
                android:fontFamily="@font/mitr_light"/>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/text_InfoDelete">

                <android.widget.Button
                    android:id="@+id/Btn_noty_del"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:text="ใช่"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:background="@color/nav_color"
                    android:fontFamily="@font/mitr_regular" />

                <android.widget.Button
                    android:id="@+id/Btn_noty_cancel"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@+id/Btn_noty_del"
                    android:text="ไม่ใช่"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:background="@color/orange"
                    android:fontFamily="@font/mitr_regular" />

            </RelativeLayout>





        </RelativeLayout>



    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>