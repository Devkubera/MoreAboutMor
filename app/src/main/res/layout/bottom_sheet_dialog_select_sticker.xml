<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BottomSheetContainerSelectComment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:background="@drawable/bottom_sheet_bg">

    <RelativeLayout
        android:id="@+id/LayoutBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/Btn_BackSticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_baseline_arrow_back_ios_24" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textCreatePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:text="เลือกสติ๊กเกอร์"
        android:textColor="@color/darknight"
        android:textSize="16dp"
        android:fontFamily="@font/mitr_medium"/>

    <View
        android:id="@+id/lineTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textCreatePost"
        android:background="@color/colorDivider" />

    <!--list Comment-->
    <RelativeLayout
        android:id="@+id/Sticker"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/lineTop"
        android:layout_marginTop="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/selectSticker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_default_photo"/>

    </RelativeLayout>


    <View
        android:id="@+id/lineBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/Sticker"
        android:background="@color/colorDivider" />

    <RelativeLayout
        android:id="@+id/LayoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lineBottom">

        <android.widget.Button
            android:id="@+id/commentButton"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="คอมเมนต์"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:background="@color/nav_color"
            android:fontFamily="@font/mitr_medium" />

        <ProgressBar
            android:id="@+id/progressBarSticker"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"/>

    </RelativeLayout>





</RelativeLayout>