<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nav_color"
    tools:context=".NotificationFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/textNoti"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:fontFamily="@font/mitr_regular"
                android:text="การแจ้งเตือน"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:shadowColor="@color/dark"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>

            <ImageView
                android:id="@+id/userProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/img_profile" />

            <!--
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/test_gif" />
            -->



        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="ยังไม่มีการแจ้งเตือน"
            android:textSize="32dp"
            android:textColor="@color/none_color"
            android:fontFamily="@font/mitr_regular"/>

    </RelativeLayout>


</FrameLayout>